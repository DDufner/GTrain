@model GTrain.ViewModels.AddTopicViewModel


<h1>Add Topic</h1>

<form asp-controller="Topic" asp-action="Add" method="post">
    <p>
        A topic is a subset of a category.  They are used to help break down large 
        categories into smaller steps on specific topics.  Think of a category as a recipe, 
        and topics as the ingredients and steps to that recipe.  Topics created are kept in the database
        and can have topics added and deleted.
    </p>
    <div class="form-group">
        <b><label asp-for="Name"></label></b>
        <input class="col-sm-4" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <b><label asp-for="Description"></label></b>
        <input class="col-lg-4" asp-for="Description"/>
        <span asp-validation-for="Description"></span>
    </div>

    <!--above categoreis not displaying correclty-->
    <input type="submit" value="Add Topic" />

</form>