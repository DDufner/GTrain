
@{
    ViewData["Title"] = "TopicIndex";
}


@model List<GTrain.Models.Topic>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <!--<td>Category</td>-->
    </tr>

    @foreach (var topic in Model)
    {
        <tr>
            <td>@topic.Name</td>
            <td>@topic.Description</td>
            <!--<td>(at)topic.Category.Name</td>-->
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No topics have been created yet!</p>
}
<p><a asp-controller="Topic" asp-action="Add">Add Topic</a></p>
<p><a asp-controller="Topic" asp-action="Remove">Remove Topic</a></p>