@{
    ViewData["Title"] = "Edit A Topic";
}

<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var topic in ViewBag.topics)
    {
        <input type="text" name="topicIds" id="@topic.ID" value="@topic.ID" />
        <label for="@topic.ID">@topic.Name</label>
        <br />
    }

    <input type="submit" value="Edit Topic" />
</form>

